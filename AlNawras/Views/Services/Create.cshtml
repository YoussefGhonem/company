@model AlNawras.Models.Service

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-4" style="margin-left:5%;margin-top:5%">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ref" class="control-label"></label>
                <input asp-for="Ref" class="form-control" />
                <span asp-validation-for="Ref" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contractors" class="control-label"></label>
                <input asp-for="Contractors" class="form-control" />
                <span asp-validation-for="Contractors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectName" class="control-label"></label>
                <input asp-for="ProjectName" class="form-control" />
                <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consultant" class="control-label"></label>
                <input asp-for="Consultant" class="form-control" />
                <span asp-validation-for="Consultant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContValue" class="control-label"></label>
                <input asp-for="ContValue" class="form-control" />
                <span asp-validation-for="ContValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
