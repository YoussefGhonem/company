@model IEnumerable<AlNawras.Dtos.ServiceList>

@{
    ViewData["Title"] = "Index";
}

<!-- Page Header Start -->
<div class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2>Our Projects</h2>
            </div>
            <div class="col-12">
                <a href="/Home/Index">Home</a>
                <a href="">List Of Projects</a>
                <p>
                    <a asp-action="create">create new</a>
                </p>
            </div>
        </div>
    </div>
</div>


<div id="content">

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="heading">
                    <h2>
                        Company Overview
                    </h2>
                </div>
                <p class="lead">
                    The company has successfully completed more than 900 projects across the country within the last 15 years.

                    Below is a list of Key Projects completed.

                </p>
            </div>
        </div>
        <table class="table table-hover ">
            <thead class="thead-dark">
                <tr style="background-color: #212529 !important; border-color: #4fbfa8 !important;">
                    <th style="        background-color: #212529 !important;
        border-color: #212529 !important;">
                        Sr.
                    </th>
                    <th style="        background-color: #212529 !important;
        border-color: #212529 !important;">
                        @Html.DisplayNameFor(model => model.Ref)
                    </th>
                    <th style="        background-color: #212529 !important;
        border-color: #212529 !important;">
                        @Html.DisplayNameFor(model => model.Contractors)
                    </th>
                    <th style="        background-color: #212529 !important;
        border-color: #212529 !important;">
                        @Html.DisplayNameFor(model => model.ProjectName)
                    </th>
                    <th style="        background-color: #212529 !important;
        border-color: #212529 !important;">
                        @Html.DisplayNameFor(model => model.Consultant)
                    </th>
                    <th style="        background-color: #212529 !important;
        border-color: #212529 !important;">
                        @Html.DisplayNameFor(model => model.ContValue)
                    </th>
                    <th style="        background-color: #212529 !important;
        border-color: #212529 !important;"></th>
                </tr>
            </thead>

            <tbody>
                @{ int RowNo = 0; }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @{RowNo++;} @RowNo
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ref)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contractors)
                        </td>
                        <td style=" width: 300px !important;">
                            @Html.DisplayFor(modelItem => item.ProjectName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Consultant)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContValue)
                        </td>
                        @*<td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>*@
                    </tr>
                }
            </tbody>
        </table>
        <div class="row">
            <div class="col-12">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
              
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </div>
        </div>

