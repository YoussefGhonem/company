@{
    Layout = "_Layout";
}

<section class="breadcrumb-area bg-img bg-overlay jarallax" style=" background-attachment: fixed; background-image: url('/assets/img/slid.png');">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div class="breadcrumb-content text-center">
                    <h2 class="page-title">FIRE ALARM & VOICE EVACUATION SYSTEM</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index"><i class="icon_house_alt"></i> Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">FIRE ALARM & VOICE EVACUATION SYSTEM</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="about-us-area section-padding-80-0 clearfix">
    <div class="container">

        <div class="row align-items-center ">
            <div class="col-12 col-lg-6 wow fadeInUp" data-wow-delay="300ms">
                <div class="about-us-content mb-80">
                    <h3 class="wow fadeInUp" data-wow-delay="100ms"> FIRE ALARM & VOICE EVACUATION SYSTEM:</h3>
                    <div class="line wow fadeInUp" data-wow-delay="200ms"></div>
                    <ul class=" wow fadeInUp" data-wow-delay="300ms">
                        <li style=" font-size: larger !important; margin-left: 2% !important;"> Addressable /Conventional Fire Alarm System</li>
                        <li style=" font-size: larger !important; margin-left: 2% !important;"> Voice Evacuation System</li>
  
                    </ul>
                </div>
            </div>

            <div class="col-lg-6">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/assets/img/solution/9.png" alt="First slide">
                        </div>
                        
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    </a>
                </div>

            </div>


        </div>
    </div>

</div>
